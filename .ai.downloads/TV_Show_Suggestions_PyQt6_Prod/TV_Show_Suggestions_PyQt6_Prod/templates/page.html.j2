<!doctype html>
<html lang="en">
<meta charset="utf-8">
<meta name="viewport" content="width=device-width,initial-scale=1">
<title>TV Guide ‚Äî Dad & Sandra</title>
<style>
:root{
  --bg: {{ theme.bg or "#0e1e21" }};
  --card: {{ theme.card or "#EAF7F4" }};
  --brand: {{ theme.brand or "#11b3a4" }};
  --ink:#0a292c; --line:rgba(0,0,0,.08);
}
*{box-sizing:border-box} html,body{margin:0;padding:0;background:var(--bg);color:#eafffb;font-family:Inter,system-ui,Segoe UI,Roboto,Helvetica,Arial,sans-serif}
.wrap{max-width:960px;margin:0 auto;padding:clamp(12px,2vw,16px)}
.header{display:grid;grid-template-columns:1fr;gap:8px;margin-bottom:8px}
.title{font-size:clamp(18px,3.8vw,22px);font-weight:800;line-height:1.15}
.controls{display:flex;gap:8px;align-items:center;overflow-x:auto}
select,.btn{border:0;border-radius:999px;background:#12383e;color:#e9fffb;padding:8px 12px;font-size:clamp(12px,2.8vw,14px);white-space:nowrap}
.btn.reset{background:transparent;border:1px solid #2b5e66}
.card{background:var(--card);color:var(--ink);border-radius:16px;box-shadow:0 3px 12px rgba(0,0,0,.15);padding:clamp(10px,2vw,14px);margin:clamp(8px,1.8vw,12px) 0;border:1px solid var(--line)}
.banner h2{margin:0;font-size:clamp(18px,4.6vw,22px)}
.banner .meta{margin-top:2px;color:#284a4f;font-weight:700;font-size:clamp(12px,3vw,14px)}
.columns{display:grid;gap:clamp(10px,2vw,14px);grid-template-columns:1fr;grid-template-areas:"poster" "badges" "info" "actions"}
@media(min-width:840px){ .columns{grid-template-columns:220px 1fr 240px; grid-template-areas:"poster badges actions" "poster info actions"} }
.poster{grid-area:poster}
.poster img{width:100%;height:auto;aspect-ratio:2/3;max-height:clamp(240px,64vw,420px);border-radius:12px;display:block;box-shadow:inset 0 0 0 1px rgba(0,0,0,.06)}
.badges{grid-area:badges;display:grid;grid-template-columns:1fr 1fr;gap:8px}
.badge{display:flex;gap:8px;align-items:center;background:#f3fbf9;border:1px solid var(--line);border-radius:12px;padding:8px 10px;font-weight:800;color:#0d3a40}
.badge .icon{font-size:clamp(24px,6vw,32px)}
.info{grid-area:info}
.desc{margin:6px 0 8px;color:#143b40;line-height:1.5;font-size:clamp(13px,3.2vw,15px)}
.kv{display:grid;grid-template-columns:1fr 1fr;gap:6px 14px}
.kv b{color:#0a2f32}
.actions{grid-area:actions;align-self:end}
.linkbtn{display:flex;justify-content:space-between;align-items:center;background:#0e3136;color:#e7fffb;padding:10px 12px;border-radius:12px;text-decoration:none;border:1px solid #0f4a51;margin:8px 0}
.linkbtn span{font-weight:800}
.footer{color:#82a8a2;font-size:12px;margin-top:8px}
</style>
<body>
<div class="wrap">
  <div class="header">
    <div class="title">üé¨ TV Shows for Dad & Sandra ‚Äî <span style="opacity:.8">A curated guide from Andrew</span></div>
    <div class="controls">
      <select id="svc"><option value="all">All services</option><option value="netflix">Netflix</option><option value="prime">Prime Video</option><option value="freevee">Freevee</option><option value="hulu">Hulu</option><option value="disneyplus">Disney+</option><option value="max">Max</option><option value="appletv">Apple TV+</option></select>
      <select id="genre"><option value="all">All genres</option><option>crime</option><option>mystery</option><option>drama</option><option>thriller</option><option>comedy</option><option>sci‚Äëfi</option></select>
      <button class="btn reset" id="reset">Reset</button>
    </div>
  </div>

  {% for s in shows %}
  <article class="card" data-services="{{ s.services or '' }}" data-genres="{{ (s.genres or '')|lower }}">
    <div class="banner">
      <h2>{{ s.title }}</h2>
      <div class="meta">{{ s.year or s.release or "" }} ¬∑ # of Seasons: {{ s.seasons or "‚Äî" }} ¬∑ Total Episodes: {{ s.episodes or "‚Äî" }}</div>
    </div>
    <div class="columns">
      <div class="poster">
        {% if s.poster_data_uri %}
        <img alt="{{ s.title }} poster" src="{{ s.poster_data_uri }}">
        {% else %}
        <img alt="{{ s.title }} poster" src="data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='600' height='900'><defs><linearGradient id='g' x1='0' x2='1' y1='0' y2='1'><stop offset='0%' stop-color='%23dff5f0'/><stop offset='100%' stop-color='%23c7ece4'/></linearGradient></defs><rect width='100%' height='100%' rx='16' ry='16' fill='url(%23g)'/></svg>">
        {% endif %}
      </div>
      <div class="badges">
        <div class="badge"><span class="icon">üçÖ</span><div><div>Avg. Tomatometer</div><div>{{ s.tomato or "‚Äî" }}</div></div></div>
        <div class="badge"><span class="icon">üçø</span><div><div>Avg. Popcornmeter</div><div>{{ s.popcorn or "‚Äî" }}</div></div></div>
      </div>
      <div class="info">
        <p class="desc">{{ s.description or "" }}</p>
        <div class="kv">
          <div><b>Years:</b> {{ s.year or s.release or "‚Äî" }}</div> <div><b># of Seasons:</b> {{ s.seasons or "‚Äî" }}</div>
          <div><b>Total Episodes:</b> {{ s.episodes or "‚Äî" }}</div> <div><b>Network:</b> {{ s.network or "‚Äî" }}</div>
          <div><b>Rating:</b> {{ s.rating or "‚Äî" }}</div>   <div><b>Genres:</b> {{ s.genres or "‚Äî" }}</div>
          <div><b>Release:</b> {{ s.release or "‚Äî" }}</div> <div><b>Status:</b> {{ s.status or "‚Äî" }}</div>
        </div>
      </div>
      <div class="actions">
        {% if s.services and 'netflix' in s.services %}
          <a class="linkbtn" target="_blank" href="https://www.netflix.com/search?q={{ s.title | urlencode }}"><span>Watch on Netflix</span>‚Üó</a>
        {% endif %}
        {% if s.personal_url %}
          <a class="linkbtn" target="_blank" href="{{ s.personal_url }}"><span>Personal notes</span>‚Üó</a>
        {% endif %}
      </div>
    </div>
  </article>
  {% endfor %}

  <div class="footer">Generated offline by TV Show Suggestions (PyQt6).</div>
</div>
<script>
(function(){
  const svc = document.getElementById('svc');
  const gen = document.getElementById('genre');
  const reset = document.getElementById('reset');
  const cards = [...document.querySelectorAll('.card')];
  function apply(){
    const s = svc.value, g = gen.value;
    cards.forEach(c=>{
      const svcs = (c.dataset.services || "").toLowerCase();
      const gens = (c.dataset.genres || "").toLowerCase();
      const okS = s==='all' || svcs.includes(s);
      const okG = g==='all' || gens.includes(g);
      c.style.display = (okS && okG) ? '' : 'none';
    });
  }
  svc.onchange = apply; gen.onchange = apply; reset.onclick = ()=>{svc.value='all'; gen.value='all'; apply();}; apply();
})();
</script>
</body>
</html>
